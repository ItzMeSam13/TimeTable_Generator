generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tasks{
  TaskID Int @id @default(autoincrement())
  TaskName String @unique
  Priority String
  Duration Int
  Deadline DateTime
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}